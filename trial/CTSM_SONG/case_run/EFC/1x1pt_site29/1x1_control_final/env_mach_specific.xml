<?xml version="1.0"?>
<file id="env_mach_specific.xml" version="2.0">
  <header>
    These variables control the machine dependent environment including
    the paths to compilers and libraries external to cime such as netcdf,
    environment variables for use in the running job should also be set	here.
    </header>
  <group id="compliant_values">
    <entry id="run_exe" value="${EXEROOT}/cesm.exe ">
      <type>char</type>
      <desc>executable name</desc>
    </entry>
    <entry id="run_misc_suffix" value=" &gt;&gt; cesm.log.$LID 2&gt;&amp;1 ">
      <type>char</type>
      <desc>redirect for job output</desc>
    </entry>
  </group>
  <module_system allow_error="true" type="module">
    <init_path lang="perl">/opt/ohpc/admin/lmod/lmod/init/perl</init_path>
    <init_path lang="python">/opt/ohpc/admin/lmod/lmod/init/env_modules_python.py</init_path>
    <init_path lang="csh">/opt/ohpc/admin/lmod/lmod/init/csh</init_path>
    <init_path lang="sh">/opt/ohpc/admin/lmod/lmod/init/sh</init_path>
    <init_path lang="salloc">/usr/local/bin/salloc</init_path>
    <cmd_path lang="perl">/opt/ohpc/admin/lmod/lmod/libexec/lmod perl</cmd_path>
    <cmd_path lang="python">/opt/ohpc/admin/lmod/lmod/libexec/lmod python</cmd_path>
    <cmd_path lang="csh">module</cmd_path>
    <cmd_path lang="sh">module</cmd_path>
    <cmd_path lang="sbatch">module</cmd_path>
    <modules compiler="intel">
      <command name="load">/opt/ohpc/pub/modulefiles/intel/2020.4</command>
      <command name="load">/opt/ohpc/pub/modulefiles/netcdf-intel/4.7.4</command>
      <command name="load">/opt/ohpc/pub/modulefiles/netcdf-fortran/intel/4.5.3</command>
      <command name="load">/opt/ohpc/pub/modulefiles/hdf5-intel/1.12.0</command>
    </modules>
  </module_system>
  <environment_variables>
    <env name="PNetCDF">/opt/ohpc/pub/libs/gnu8/openmpi3/pnetcdf/1.12.0</env>
    <env name="PNETCDF">/opt/ohpc/pub/libs/gnu8/openmpi3/pnetcdf/1.12.0</env>
    <env name="PNETCDF_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/pnetcdf/1.12.0</env>
    <env name="PNETCDF_BASE">/opt/ohpc/pub/libs/gnu8/openmpi3/pnetcdf/1.12.0</env>
    <env name="PNETCDF_Fortran_LIBRARY">/opt/ohpc/pub/libs/gnu8/openmpi3/pnetcdf/1.12.0/lib</env>
    <env name="PNETCDF_Fortran_INCLUDE_DIR">/opt/ohpc/pub/libs/gnu8/openmpi3/pnetcdf/1.12.0/include</env>
    <env name="OMP_STACKSIZE">256M</env>
  </environment_variables>
  <environment_variables compiler="gnu">
    <env name="NETCDF">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf/4.7.1</env>
    <env name="NetCDF">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf/4.7.1</env>
    <env name="NETCDF_C_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf/4.7.1</env>
    <env name="NetCDF_C_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf/4.7.1</env>
    <env name="NETCDF_FORTRAN_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf-fortran/4.5.2</env>
    <env name="NetCDF_FORTRAN_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf-fortran/4.5.2</env>
    <env name="NETCDF_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf/4.7.1</env>
    <env name="NetCDF_PATH">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf/4.7.1</env>
    <env name="NETCDF_Fortran_LIBRARY">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf-fortran/4.5.2/lib</env>
    <env name="NETCDF_Fortran_INCLUDE_DIR">/opt/ohpc/pub/libs/gnu8/openmpi3/netcdf-fortran/4.5.2/include</env>
    <env name="HDF5_HOME">/opt/ohpc/pub/libs/gnu8/openmpi3/hdf5/1.10.5</env>
    <env name="HDF5">/opt/ohpc/pub/libs/gnu8/openmpi3/hdf5/1.10.5</env>
    <env name="ESMFBIN_PATH">/home/u22/chopinsong/software/esmf-8.3.0/INSTALL/bin/binO/</env>
    <env name="ESMFMKFLIE">/home/u22/chopinsong/software/esmf-8.3.0/INSTALL/lib/libO/Linux.gfortran.64.openmpi.default/esmf.mk</env>
  </environment_variables>
  <environment_variables compiler="intel">
    <env name="NETCDF">/opt/ohpc/pub/apps/netcdf-intel/4.7.4</env>
    <env name="NetCDF">/opt/ohpc/pub/apps/netcdf-intel/4.7.4</env>
    <env name="NETCDF_C_PATH">/opt/ohpc/pub/apps/netcdf-intel/4.7.4</env>
    <env name="NetCDF_C_PATH">/opt/ohpc/pub/apps/netcdf-intel/4.7.4</env>
    <env name="NETCDF_FORTRAN_PATH">/opt/ohpc/pub/apps/netcdf-fortran/4.5.3</env>
    <env name="NetCDF_FORTRAN_PATH">/opt/ohpc/pub/apps/netcdf-fortran/4.5.3</env>
    <env name="NETCDF_PATH">/opt/ohpc/pub/apps/netcdf-intel/4.7.4</env>
    <env name="NetCDF_PATH">/opt/ohpc/pub/apps/netcdf-intel/4.7.4</env>
    <env name="NETCDF_Fortran_LIBRARY">/opt/ohpc/pub/apps/netcdf-fortran/4.5.3/lib</env>
    <env name="NETCDF_Fortran_INCLUDE_DIR">/opt/ohpc/pub/apps/netcdf-fortran/4.5.3/lib</env>
    <env name="HDF5_HOME">/opt/ohpc/pub/apps/hdf5-intel/1.12.0</env>
    <env name="HDF5">/opt/ohpc/pub/apps/hdf5-intel/1.12.0</env>
  </environment_variables>
  <resource_limits>
    <resource name="RLIMIT_STACK">-1</resource>
  </resource_limits>
  <mpirun mpilib="mpich">
    <executable>mpiexec</executable>
    <arguments>
      <arg name="ntasks"> -np {{ total_tasks }} </arg>
    </arguments>
  </mpirun>
  <mpirun mpilib="openmpi">
    <executable>/usr/bin/time -o mpit_prog.timing mpirun</executable>
    <arguments>
      <arg name="ntasks"> -np {{ total_tasks }}</arg>
    </arguments>
  </mpirun>
</file>
